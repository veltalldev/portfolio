{{ define "main" }}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <header class="bg-white dark:bg-gray-800 shadow-sm">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
      <div class="text-xl font-bold text-gray-900 dark:text-white">{{ .Site.Title }}</div>
      <div class="flex space-x-4">
        {{ range .Site.Menus.main }}
        <a href="{{ .URL }}" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">{{ .Name }}</a>
        {{ end }}
      </div>
    </nav>
  </header>

  <!-- Hero Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{{ .Title }}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">{{ .Description }}</p>
      <div class="prose dark:prose-invert max-w-2xl mx-auto">
        {{ .Content }}
      </div>
    </div>
  </div>

  <!-- Content Sections -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Professional Section -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Professional</h2>
        <div class="space-y-4">
          {{ range where .Site.RegularPages "Section" "professional" }}
          <a href="{{ .RelPermalink }}" class="block p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition">
            <div class="flex items-center gap-3">
              {{ $icon := index .Params "icon" | default "document" }}
              {{ partial "icons" (dict "name" $icon "class" "h-6 w-6" "color" (.Params.iconColor | default "blue-500")) }}
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{{ .Title }}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{{ .Description }}</p>
              </div>
            </div>
          </a>
          {{ end }}
        </div>
      </div>

      <!-- Personal Section -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Personal</h2>
        <div class="space-y-4">
          {{ range where .Site.RegularPages "Section" "personal" }}
          <a href="{{ .RelPermalink }}" class="block p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition">
            <div class="flex items-center gap-3">
              {{ $icon := index .Params "icon" | default "document" }}
              {{ partial "icons" (dict "name" $icon "class" "h-6 w-6" "color" (.Params.iconColor | default "blue-500")) }}
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{{ .Title }}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">{{ .Description }}</p>
              </div>
            </div>
          </a>
          {{ end }}
        </div>
      </div>
    </div>
  </div>
</div>
{{ end }}